# AI Career Agent Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# AWS Configuration
# ============================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id-here

# ============================================================
# Environment
# ============================================================
ENVIRONMENT=dev
# Options: dev, staging, prod

# ============================================================
# AWS Cognito (Authentication)
# ============================================================
USER_POOL_ID=your-user-pool-id
USER_POOL_CLIENT_ID=your-client-id
COGNITO_REGION=us-east-1

# ============================================================
# API Gateway
# ============================================================
API_ENDPOINT=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev
API_TIMEOUT=30000

# ============================================================
# DynamoDB Tables
# ============================================================
USERS_TABLE=dev-CareerAgentUsers
JOBS_TABLE=dev-CareerAgentJobs
APPLICATIONS_TABLE=dev-CareerAgentApplications

# ============================================================
# S3 Buckets
# ============================================================
RESUMES_BUCKET=dev-career-agent-resumes-your-account-id
LAMBDA_BUCKET=dev-career-agent-lambda-your-account-id

# ============================================================
# AWS Bedrock
# ============================================================
BEDROCK_MODEL_ID=anthropic.claude-3-5-haiku-20241022-v1:0
BEDROCK_REGION=us-east-1

# ============================================================
# Lambda Configuration
# ============================================================
LAMBDA_FUNCTION_NAME=dev-CareerAgentAPI
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=512

# ============================================================
# Frontend Configuration (React App)
# ============================================================
VITE_API_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev
VITE_USER_POOL_ID=your-user-pool-id
VITE_USER_POOL_CLIENT_ID=your-client-id
VITE_AWS_REGION=us-east-1

# ============================================================
# External API Keys (Optional)
# ============================================================
# Gmail API (for email integration)
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:5173/auth/callback

# Indeed API (for job scraping)
INDEED_API_KEY=your-indeed-api-key

# LinkedIn API (for job scraping)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ============================================================
# Feature Flags
# ============================================================
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_INTEGRATION=true
ENABLE_JOB_SCRAPING=true
ENABLE_ANALYTICS=true

# ============================================================
# CloudWatch Logging
# ============================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================
# Rate Limiting
# ============================================================
API_RATE_LIMIT=100
# Requests per minute per user

# ============================================================
# CORS Configuration
# ============================================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.com

# ============================================================
# Email Configuration (SES)
# ============================================================
SES_REGION=us-east-1
FROM_EMAIL=noreply@your-domain.com
ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================================
# Monitoring & Alerts
# ============================================================
ENABLE_CLOUDWATCH_ALARMS=true
SNS_ALERT_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:career-agent-alerts

# ============================================================
# Security
# ============================================================
JWT_SECRET=your-jwt-secret-here
SESSION_TIMEOUT=3600
# Session timeout in seconds (1 hour)

# ============================================================
# Development Settings
# ============================================================
DEBUG_MODE=false
MOCK_BEDROCK_RESPONSES=false
USE_LOCAL_DYNAMODB=false
